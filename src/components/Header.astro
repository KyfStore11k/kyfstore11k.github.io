<header id="header" class="fixed top-0 left-0 w-full bg-[#141414] bg-opacity-80 backdrop-blur-md shadow-md py-4 transition-all duration-500 z-50">
    <div class="max-w-6xl mx-auto flex items-center justify-between px-6">
        <h1 class="text-red-500 font-bold text-xl md:text-2xl font-['Orbitron']">KyfStore11k</h1>
        <nav class="space-x-6 hidden md:flex text-white font-semibold">
            <a href="/" class="hover:text-red-500 hover:drop-shadow-[0_0_8px_rgba(255,0,0,0.8)] transition">Home</a>
            <a href="/about" class="hover:text-red-500 hover:drop-shadow-[0_0_8px_rgba(255,0,0,0.8)] transition">About</a>
            <a href="/projects" class="hover:text-red-500 hover:drop-shadow-[0_0_8px_rgba(255,0,0,0.8)] transition">Projects</a>
            <a href="/contact" class="hover:text-red-500 hover:drop-shadow-[0_0_8px_rgba(255,0,0,0.8)] transition">Contact</a>
        </nav>
    </div>

    <script>
        const header = document.getElementById('header');

        window.addEventListener('scroll', () => {
            if (window.scrollY > 50) {
                header.classList.add('bg-opacity-100', 'shadow-xl', 'py-2');
                header.classList.remove('py-4');
            } else {
                header.classList.remove('bg-opacity-100', 'shadow-xl', 'py-2');
                header.classList.add('py-4');
            }
        });
    </script>
</header>
